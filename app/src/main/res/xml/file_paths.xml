<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Internal storage -->
    <files-path
        name="internal_files"
        path="." />

    <!-- Cache directory -->
    <cache-path
        name="cache_files"
        path="." />

    <!-- Backup files -->
    <files-path
        name="backup_files"
        path="backups/" />

    <!-- External storage (if needed) -->
    <external-files-path
        name="external_files"
        path="." />

    <!-- Download directory for exports -->
    <external-path
        name="downloads"
        path="Download/" />
</paths>